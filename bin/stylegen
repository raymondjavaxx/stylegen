#!/usr/bin/env ruby
# frozen_string_literal: true

require 'yaml'
require 'optparse'
require 'stylegen'

@options = {}

OptionParser.new(version=1.0) do |opts|
  opts.on_tail('--version', 'Show version') do
    puts Stylegen::VERSION
    exit
  end
end.parse!

data = File.open('theme.yaml') { |file| YAML.load(file) }

validator = Stylegen::Validator.new()
unless validator.valid?(data)
  STDERR.puts "theme.yaml contains one or more errors:"

  validator.validate(data).each do |e|
    STDERR.puts "  #{e}"
  end

  exit(1)
end

generator = Stylegen::Generator.new(data)
generator.generate
